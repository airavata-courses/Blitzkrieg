node {
    def app
	
    stage('Code checkout') {
        checkout scm
    }

    stage('Build image') {
	app = bat "docker-compose -f .\\user_management\\docker-compose.yml build"
    }
	
    stage('Push image') {
        docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
	    app.push("${env.BUILD_NUMBER}")
            app.push("latest")
        }
    }
}
